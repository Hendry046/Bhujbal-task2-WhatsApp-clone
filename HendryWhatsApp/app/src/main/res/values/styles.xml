<resources>

    <!-- Style for the tabs in TabLayout -->
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <!-- Set the background color -->
        <item name="android:background">#006257</item>

        <!-- Set the custom tab indicator -->
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>


    <!-- Style for the text color of the tabs -->
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyMenuItemStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LogoutMenuItem" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item> <!-- Set the background color to white -->
        <item name="android:textColor">#006257</item> <!-- Set the text color to black -->
    </style>

</resources>